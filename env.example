# Application Settings
FLASK_APP=app.py
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here

# Storage Settings
DATA_DIR=data
UPLOAD_DIR=uploads/receipts
THUMBNAIL_DIR=uploads/thumbnails

# Email Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=recipient1@email.com,recipient2@email.com

# OCR Settings
# Path to Tesseract executable (if not in system PATH)
TESSERACT_CMD=/usr/local/bin/tesseract

# Google Cloud Vision Settings
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/credentials.json
GOOGLE_VISION_API_ENDPOINT=https://vision.googleapis.com
GOOGLE_VISION_TIMEOUT=30
GOOGLE_VISION_MAX_RETRIES=3
GOOGLE_VISION_BATCH_SIZE=10

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Debug Settings
DEBUG_MODE=False
DEBUG_DIR=debug_output 